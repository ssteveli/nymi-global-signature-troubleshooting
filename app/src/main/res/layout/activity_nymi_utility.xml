<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".NymiUtility">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Init SDK"
        android:id="@+id/initButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Discovery"
        android:id="@+id/discoveryButton"
        android:layout_below="@+id/initButton"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree"
        android:id="@+id/agreeButton"
        android:layout_below="@+id/discoveryButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validate"
        android:id="@+id/validateButton"
        android:layout_below="@+id/agreeButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Global Signature"
        android:id="@+id/authButton"
        android:layout_below="@+id/clearLog"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/disconnectButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Connect on Find?"
        android:id="@+id/autoConnect"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/log"
        android:layout_alignStart="@+id/autoConnect"
        android:layout_alignBottom="@+id/disconnectButton"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/discoveryButton"
        android:editable="false"
        android:enabled="false"
        android:textColor="#ff000000"
        android:gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log"
        android:id="@+id/textView"
        android:layout_above="@+id/log"
        android:layout_alignStart="@+id/log" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Log"
        android:id="@+id/clearLog"
        android:layout_below="@+id/validateButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Partner Discovery"
        android:id="@+id/partnerDiscovery"
        android:layout_below="@+id/authButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global Signature"
        android:id="@+id/globalSign"
        android:layout_below="@+id/partnerDiscovery"
        android:layout_alignParentStart="true" />

</RelativeLayout>